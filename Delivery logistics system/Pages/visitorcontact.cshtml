@page
@model Delivery_logistics_system.Pages.visitorcontactModel
@{
    Layout = "VisitorLayout";

}

<body>

    <!-- Page Header Start -->
    <div class="container-fluid page-header py-5" style="margin-bottom: 6rem;">
        <div class="container py-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Contact Us</h1>

        </div>
    </div>
    <!-- Page Header End -->
    <!-- Contact Start -->
    <div class="container-fluid overflow-hidden py-5 px-lg-0">
        <div class="container contact-page py-5 px-lg-0">
            <div class="row g-5 mx-lg-0 justify-content-center">
                <!-- Added justify-content-center -->
                <div class="col-md-6 contact-form wow fadeIn" data-wow-delay="0.1s">
                    <h6 class="text-secondary text-uppercase">Get In Touch</h6>
                    <h1 class="mb-4">Contact For Any Query</h1>
                    <div class="bg-light p-4">
                        <form method="post">
                            <div class="row g-3">
                                <div class="form-group">
                                    <label>Email address</label>
                                    <input type="email" class="form-control" asp-for="@Model.co.Email" placeholder="">
                                </div> <!-- form-group end.// -->

                                <div class="form-group col-md-6">
                                    <label>Type</label>
                                    <select id="Type" class="form-control" asp-for="@Model.co.type">
                                        <option>Choose...</option>
                                        <option>Complaint</option>
                                        <option>Feedback</option>
                                        <option>Contact us</option>
                                    </select>
                                </div> <!-- form-group end.// -->
                                <div class="col-12">
                                    <div class="form-floating">
                                        <textarea class="form-control" placeholder="Leave a message here" id="message" asp-for="@Model.co.Form" style="height: 100px"></textarea>
                                        <label for="message">Message</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary w-100 py-3" type="submit">Send Message</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact End -->

</body>