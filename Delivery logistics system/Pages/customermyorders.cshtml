@page
@model customermyorders
@{
    Layout = "CustomerLayout";
}
<body>
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="css/Style2.css" rel="stylesheet">
        <title>Contact Form</title>
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-lg-7 mx-auto">
                    <div class="card mt-2 mx-auto p-4 bg-light">
                        <div class="card-body bg-light">
                            <div class="container">
                                <form method="post">
                                    <div class="controls">
                                       
                                        <div class="form-group">
                                            <label for="form_requirements">Requirements *</label>
                                            <select id="form_requirements" asp-for="@Model.O.Requirements" class="form-control" required="required" data-error="Requirements are required.">
                                                <option value="" disabled selected>Please select your requirements *</option>
                                                <option value="Requirement1">None</option>
                                                <option value="Requirement2">Fragile</option>
                                                <option value="Requirement3">Refrigerated</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="form_requirements">Shipment Method *</label>
                                            <select id="Shipment Method" asp-for="@Model.O.ShipmentMethod" class="form-control" required="required" data-error="Requirements are required.">
                                                <option value="" disabled selected>Please select your Shipment Method *</option>
                                                <option value="Requirement1">Ground</option>
                                                <option value="Requirement2">Sea</option>
                                                <option value="Requirement3">Air</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="form_requirements">Payment Method *</label>
                                            <select id="Payment Method" asp-for="@Model.O.PaymentMethod" class="form-control" required="required" data-error="Requirements are required.">
                                                <option value="" disabled selected>Please select your Payment Method *</option>
                                                <option value="Requirement1">Cash on Delivery</option>
                                                <option value="Requirement2">Credit Card</option>
                                            </select>
                                        </div>
                                      
                                        <div class="form-group">
                                            <label for="form_sendername">Reciver Name *</label>
                                            <input id="form_sendername" type="text" asp-for="@Model.O.ReceiverName" name=" reciver_name" class="form-control" placeholder="Please enter reciver's name *" required="required" data-error="Reciver's name is required.">
                                        </div>
                                        <div class="form-group">
                                            <label for="form_senderphone">Reciver Phone *</label>
                                            <input id="form_senderphone" type="tel" asp-for="@Model.O.ReceiverPhone" name=" reciver_phone" class="form-control" placeholder="Please enter reciver's phone number *" required="required" data-error="Reciver's phone number is required.">
                                        </div>
                                        <div class="form-group">
                                            <label for="form_senderemail">Reciver Email *</label>
                                            <input id="form_senderemail" type="email" asp-for="@Model.O.ReceiverEmail" name=" reciver_email" class="form-control" placeholder="Please enter reciver's email *" required="required" data-error="Reciver's email is required.">
                                        </div>
                                        <div class="form-group">
                                            <label for="form_senderaddress">Reciver Address *</label>
                                            <input id="form_senderaddress" type="text" asp-for="@Model.O.ReceiverAddress" name=" reciver_address" class="form-control" placeholder="Please enter reciver's address *" required="required" data-error="Reciver's address is required.">
                                        </div>
                                        <div class="form-group">
                                            <label for="form_requirements">Reciver Zone *</label>
                                            <select id="ReciverZone" asp-for="@Model.O.ReceiverZone" class="form-control" required="required" data-error="Requirements are required.">
                                                <option value="" disabled selected>Please select your Zone *</option>
                                                <option value="Requirement1">Cairo</option>
                                                <option value="Requirement2">Alexandria</option>
                                                <option value="Requirement2">Giza</option>
                                            </select>
                                        </div>
                                       
                                        <br />
                                        @* <div class="text-center">
                                            <a asp-page="/CustomerMainInterface" class="btn btn-secondary">Order</a>
                                        </div> *@
                                        <button type="submit" class="btn btn-primary">Order</button>

                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- /.8 -->
                </div>
                <!-- /.row-->
            </div>
        </div>
    </body>
</html>








   
</body>

